echo "node_modules/" >> .gitignore
echo ".DS_Store" >> .gitignore
echo "*/.DS_Store" >> .gitignore
cat << EOF >> .gitignore
# Dependencies
**/node_modules/

# Next.js build output
.next/
out/

# Production build files
build/
dist/

# Debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Local env files
.env*.local

# IDE files
.vscode/
.idea/

# OS files
.DS_Store
Thumbs.db
EOF
